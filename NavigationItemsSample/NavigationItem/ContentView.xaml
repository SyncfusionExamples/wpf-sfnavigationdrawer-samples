<UserControl x:Class="NavigationItem.ContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationItem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Content>
        <Grid x:Name="headingGrid" Background="#f0f0f0">
            <ListView
                x:Name="listView"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="2"
                            Background="White"
                            BorderBrush="Gray"
                            BorderThickness="0.4">
                            <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        x:Name="nameLabel"
                                        Grid.Column="0"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        HorizontalContentAlignment="Left"
                                        Content="{Binding Sender}"
                                        FontSize="14"
                                        FontWeight="{Binding FontAttribute}"
                                        Foreground="#282828" />
                                    <Label
                                        x:Name="dateLabel"
                                        Grid.Column="1"
                                        Margin="0,0,5,0"
                                        HorizontalAlignment="Right"
                                        HorizontalContentAlignment="Right"
                                        Content="{Binding Date}"
                                        FontSize="12"
                                        FontWeight="{Binding FontAttribute}"
                                        Foreground="#282828" />
                                </Grid>
                                <Label
                                    x:Name="subjectLabel"
                                    Grid.Row="1"
                                    Margin="5,0,0,0"
                                    HorizontalContentAlignment="Left"
                                    Content="{Binding Subject}"
                                    FontSize="12"
                                    FontWeight="{Binding FontAttribute}"
                                    Foreground="#282828" />
                                <Label
                                    x:Name="descriptionLabel"
                                    Grid.Row="2"
                                    Margin="5,0,0,0"
                                    HorizontalContentAlignment="Left"
                                    Content="{Binding Content}"
                                    FontSize="12"
                                    Foreground="#545659" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ListViewItem Margin="0" Padding="0">
                                        <ContentPresenter />
                                    </ListViewItem>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </UserControl.Content>


</UserControl>
