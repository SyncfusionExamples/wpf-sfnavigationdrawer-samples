    <syncfusion:SfNavigationDrawer x:Name="navigationDrawer" DisplayMode="Expanded">
        <syncfusion:NavigationItem
            Header="Inbox"
            IsExpanded="True"
            IsSelected="True">
            <syncfusion:NavigationItem.Icon>
                <Path
                    Width="16"
                    Height="13"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="{StaticResource Inbox}"
                    Fill="Black"
                    Stretch="Fill" />
            </syncfusion:NavigationItem.Icon>
            <syncfusion:NavigationItem Header="Primary">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Primary}" Style="{StaticResource NavigationItemPathStyle}" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
            <syncfusion:NavigationItem Header="Social">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Social}" Style="{StaticResource NavigationItemPathStyle}" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
            <syncfusion:NavigationItem Header="Promotions">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Promotions}" Style="{StaticResource NavigationItemPathStyle}" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
        </syncfusion:NavigationItem>
        <syncfusion:NavigationItem Header="Sent mail">
            <syncfusion:NavigationItem.Icon>
                <Path Data="{StaticResource SentMail}" Style="{StaticResource NavigationItemPathStyle}" />
            </syncfusion:NavigationItem.Icon>
        </syncfusion:NavigationItem>
        <syncfusion:NavigationItem Header="Important">
            <syncfusion:NavigationItem.Icon>
                <Path Data="{StaticResource Important}" Style="{StaticResource NavigationItemPathStyle}" />
            </syncfusion:NavigationItem.Icon>
            <syncfusion:NavigationItem Header="Work">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Work}" Style="{StaticResource NavigationItemPathStyle}" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
            <syncfusion:NavigationItem Header="Personal">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Personal}" Style="{StaticResource NavigationItemPathStyle}" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
        </syncfusion:NavigationItem>
        <syncfusion:NavigationItem Header="Drafts">
            <syncfusion:NavigationItem.Icon>
                <Path Data="{StaticResource Drafts}" Style="{StaticResource NavigationItemPathStyle}" />
            </syncfusion:NavigationItem.Icon>
        </syncfusion:NavigationItem>
        <syncfusion:SfNavigationDrawer.ToggleButtonIconTemplate>
            <DataTemplate>
                <Image
                    x:Name="image"
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="People.png" />
            </DataTemplate>
        </syncfusion:SfNavigationDrawer.ToggleButtonIconTemplate>
        <syncfusion:SfNavigationDrawer.ToggleButtonContentTemplate>
            <DataTemplate>
                <Label
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Johnson Martin"
                    FontWeight="Bold" />
            </DataTemplate>
        </syncfusion:SfNavigationDrawer.ToggleButtonContentTemplate>
        <syncfusion:SfNavigationDrawer.FooterItems>
            <syncfusion:NavigationItem Header="LogOut" ItemType="Button">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource LogOut}" Style="{StaticResource NavigationItemPathStyle}" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
        </syncfusion:SfNavigationDrawer.FooterItems>
        <syncfusion:SfNavigationDrawer.ContentView>
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="ContentView" />
        </syncfusion:SfNavigationDrawer.ContentView>
    </syncfusion:SfNavigationDrawer>


